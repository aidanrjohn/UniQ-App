<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answer_card"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    card_view:cardCornerRadius="4dp"
    android:layout_weight="0.45"
    android:layout_marginBottom="10dp"
    android:clickable="false"
    android:onClick="answerCardPressed"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/answer_card_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/answer_upvotes_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/question_card_text"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/answer_user_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/answer_date_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>